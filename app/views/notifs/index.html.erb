<p id="notice"><%= notice %></p>

<h1>Listing Notifs</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Rule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifs.each do |notif| %>
      <tr>
        <td><%= notif.date %></td>
        <td><%= notif.rule_id %></td>
        <td><%= link_to 'Show', notif %></td>
        <td><%= link_to 'Edit', edit_notif_path(notif) %></td>
        <td><%= link_to 'Destroy', notif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

