
<section id="back">
    <div class="container">
        <div class="card card-container">
            
            <h2 style="text-align:center">ورود</h2>
            <br>

                  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  :class => 'form-signin') do |f| %>
                          <div class="field">
                        
                            <%= f.label :"ایمیل" %><br />
                            <%= f.email_field :email, :class => 'form-control', autofocus: true %>
                          </div>

                          <div class="field">
                            <%= f.label :"رمزعبور" %><br />
                            <%= f.password_field :password,:class => 'form-control' ,autocomplete: "off" %>
                          </div>
                          
                        <% if devise_mapping.rememberable? -%>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :"مرابه یاد بسپار" %>
                          </div>
                          <%= render "devise/shared/links" %>

                        <% end -%>
                        
                       <div class='form-group'>
                            <%= f.submit "ورود" , :class =>'form-control btn btn-primary btn-lg'  %>
                        </div>
                      
                <% end %>

          </div><!-- /card-container -->
    </div><!-- /container -->
</section>


