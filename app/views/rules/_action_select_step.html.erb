                    <%= submit_tag("Continue", :class => 'form-control btn btn-primary btn-lg') %>
                    <br>
                    <%= submit_tag("Back", :name => :Back,  :class => 'form-control btn btn-primary btn-lg') %>
                 
            <% end %>
        </div><!-- /card-container -->
    </div><!-- /container -->

</section>



