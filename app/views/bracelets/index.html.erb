<p id="notice"><%= notice %></p>

<h1>Listing Bracelets</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>User</th>
      <th>Is shaking</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bracelets.each do |bracelet| %>
      <tr>
        <td><%= bracelet.color %></td>
        <td><%= bracelet.user %></td>
        <td><%= bracelet.is_shaking %></td>
        <td><%= link_to 'Show', bracelet %></td>
        <td><%= link_to 'Edit', edit_bracelet_path(bracelet) %></td>
        <td><%= link_to 'Destroy', bracelet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

